<% question ||= nil %>
<% action_icon = question.answer.blank? ? 'reply' : 'pencil' %>
 
<div class="question">
  <div class="question-content">
    <div class="question-text text-lead">
      <%= question.text %>

      <div class="question-author">
        <% if get_author(question.author_id).present? %>
          <%= 'автор вопроса:' %>
          <%= link_to "#{get_author(question.author_id).name}", user_path(get_author(question.author_id)) %>
        <% elsif question.author_id.present? %>
          <%= 'аккаунт автора удален' %>
        <% else %>
          <%= 'анонимный вопрос' %>
        <% end %>
      </div>
      
    </div>
    
    <% if question.answer.present? %>
    <div class="question-answer text-lead">
      <%= question.answer if question.answer.present? %>
    </div>
    <% end %>

    <div class="question-date">
      <%= l(question.created_at, format: :short) %>
    </div>
  </div>

  <% if question.user == current_user %>
    <div class="question-actions">
      <%= link_to fa_icon(action_icon), edit_question_path(question) %>
      <%= link_to fa_icon('trash-o'), question_path(question), method: :delete, data: { confirm: 'Удалить вопрос?'} %>
    </div>
  <% end %>
</div>